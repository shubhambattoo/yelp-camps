<% include ../partials/header %>

    <div class="container">
        <h1 class="text-center">Edit - <strong><%= campground.name %></strong> </h1>
        <div class="row mt-4">
            <div class="col-md-6 offset-md-3">
                <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" class="form">
                    <div class="form-group">
                        <input type="text" name="campground[name]" class="form-control" value="<%= campground.name %>">
                    </div>
                    <div class="form-group">
                        <input type="url" name="campground[image]" placeholder="image url" class="form-control" value="<%= campground.image%>">
                    </div>
                    <div class="form-group">
                        <input type="number" name="campground[price]" class="form-control" value="<%= campground.price %>" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <textarea name="campground[description]" id="" cols="30" rows="10" class="form-control" placeholder="description">
                            <%= campground.description %>
                        </textarea>
                    </div>
                    <input type="submit" value="Submit" class="btn btn-lg btn-info btn-block">
                </form>
                <a href="/campgrounds/<%= campground._id %>">Go Back</a>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>
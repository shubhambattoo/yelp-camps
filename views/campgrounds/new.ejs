<% include ../partials/header %>

    <div class="container">
        <h1 class="text-center">Create a new Campground</h1>
        <div class="row mt-4">
            <div class="col-md-6 offset-md-3">
                <form action="/campgrounds" method="post" class="form">
                    <div class="form-group">
                        <input type="text" name="name" placeholder="name" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="url" name="image" placeholder="image url" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="number" name="price" placeholder="price" class="form-control" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <textarea name="description" id="" cols="30" rows="10" class="form-control" placeholder="description"></textarea>
                    </div>
                    <input type="submit" value="Submit" class="btn btn-lg btn-info btn-block">
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>